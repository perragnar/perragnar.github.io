---
layout: default
category_filter: foto
---

{% include minihero.liquid %}

{% if site.site_open and page.page_open != false  %}
    <section class="section section--photo">
        <div class="slice">
            <div class="row">
                <div class="col col--full card card--ghost animate animate--fade-in animate--slide-right">
                    <div class="card__body">
                        {% if page.title %}
                            <h1 class="section__header">{{ page.title }}</h1>
                        {% endif %}
                        {{ content }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <section class="section section--blog">
        <div class="slice">
            <div class="row">
                <div class="col col--full card">
                    <div class="card__body">
                        <h2>Blogginlägg</h2>
                        <p>
                            Här under listas alla blogginlägg relaterade till fotografering.
                        </p>
                    </div>
                </div>
            </div>
            <div class="row">
                {% for post in site.posts %}
                    {% capture this_year %}{{ post.date | date: "%Y" }}{% endcapture %}
                    {% capture next_year %}{{ post.previous.date | date: "%Y" }}{% endcapture %}
                    {% assign post_categories = post.categories | downcase %}

                    {% if forloop.first %}
                        <div class="col col--full card card--rogue">
                            <div class="card__body">
                                <h2 id="{{ this_year }}-ref" class="no-margin">{{this_year}}</h2>
                            </div>
                        </div>
                    {% endif %}

                    {% if post.galleries and post_categories contains layout.category_filter %}
                        {% unless post.draft %}
                            <div class="col col--1-3 card">
                                <div class="card__poster">
                                    {% for gallerySlug in post.galleries %}
                                        {% assign gallery = site.data.galleries[gallerySlug] %}
                                        {% if gallery.contents %}
                                            {% assign photos = gallery.contents %}
                                            {% for photo in photos limit:1 %}
                                                <a href="{{ site.baseurl }}{{ post.url }}">
                                                    <div class="photo" style="background-image: url({{site.baseurl}}/assets/photos/galleries/{{ gallerySlug }}/{{ photo.filename }});"></div>
                                                </a>
                                            {% endfor %}
                                        {% endif %}
                                    {% endfor %}
                                </div>
                                <div class="card__body">
                                    <h3 class="card__title">
                                        <a href="{{ site.baseurl }}{{ post.url }}">
                                            {{ post.title }}
                                        </a>
                                    </h3>
                                    <div class="card__date">{% include datetime.liquid datetime=post.date %}</div>
                                    {{ post.content | strip_html | truncatewords: 20 }}
                                </div>
                            </div>
                        {% endunless %}
                    {% endif %}
                    
                    {% if this_year != next_year %}
                        {% if forloop.last %}
                        {% else %}
                            <div class="col col--full card card--ghost">
                                <div class="card__body">
                                    <h2 id="{{ next_year }}-ref" class="no-margin">{{next_year}}</h2>
                                </div>
                            </div>
                        {% endif %}
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </section>
{% else %}
    {% include closed.liquid %}
{% endif %}
