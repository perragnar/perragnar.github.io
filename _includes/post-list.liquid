{% assign post_counter = 0 %}
{% assign limit = include.limit | default: 0 %}

{% if limit == 0 %}
    {% assign limit = site.posts | size %}
{% endif %}

{% for post in site.posts %}
    {% unless post.draft %}
        {% assign post_counter = post_counter | plus:1 %}
        {% if post_counter <= limit %}
            <div class="col col--1-5 card card--shadow animate animate--fade-in animate--slide-left">
                <div class="card__body">
                    {% if post.title %}<h4 class="card__title{% if post.poster %} poster-title{% endif %}"><a href="{{ site.baseurl }}{{ post.url }}">{{ post.title }}</a></h4>{% endif %}
                    
                    <div class="post-meta">
                        <div class="post-meta-section date">{% include datetime.liquid datetime=post.date %}</div>
                        {% if post.tags %}
                            <div class="post-meta-section tags">
                                <ul>
                                    {% for tag in post.tags %}
                                        <li><a href="/tags/#{{ tag | slugify: 'pretty' }}" class="tag">{{ tag }}</a></li>
                                    {% endfor %}
                                </ul>
                            </div>
                        {% endif %}
                    </div>

                    {% if post_counter <= site.featured_posts %}
                        {% assign post_content = post.content | strip_newlines %}
                        {{ post.excerpt | markdownify }}
                        {% if post_content != '' %}
                            <div class="post-content-buttons">
                                <a href="{{ site.baseurl }}{{ post.url }}" class="button button--green">LÃ¤s artikeln</a>
                            </div>
                        {% endif %}
                    {% endif %}
                </div>
            </div>
        {% endif %}
    {% endunless %}
{% endfor %}
