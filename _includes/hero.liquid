<section id="hero" class="section section--hero">
    <div class="slice">
        <div class="row">
            <div class="col col--1-2 animate animate--fade-in animate--slide-down">
                <h1 class="page-title">Per Ragnar Edin</h1>
                <p>
                    Jag
                    <span class="sticker">❤️</span> 
                    <span class="sticker">☕️</span> +
                    <span class="sticker">📷</span> &amp;
                    <span class="sticker">🌳🌲🌴</span>
                </p>
            </div>
            <div class="col col--1-2 animate animate--fade-in animate--slide-down">
                <ul class="hero__list">
                    <li class="check">
                        <span class="label">
                            <span class="no-wrap">Webbutvecklare &amp;</span>
                            <span class="no-wrap">webbdesigner</span>
                        </span>
                    </li>
                    <li class="check">
                        <span class="label">Grafiker</span>
                    </li>
                    <li class="check">
                        <span class="label">
                            <span class="strike">Fotograf</span> Nybörjarfotograf
                        </span>
                    </li>
                </ul>
                <ul class="share-list" style="margin-top: 1.2rem;">
                    {% for link in site.data.links %}
                        <li>
                            <a href="{{ link.url }}" class="link link--{{ link.class }}">{{ link.title }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</section>
